<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bw.mapper.UserDao">
	<insert id="zhuce" parameterType="com.bw.bean.User">
		insert into t_user (uname,upwd,utype) values (#{uname},#{upwd},#{utype})
	</insert>
	<select id="login" resultType="com.bw.bean.User" parameterType="string">
		select * from t_user where uname = #{uname}
	</select>
</mapper>